<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="361dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/CartElementDeleteCart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@drawable/close" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/CartElementImageView"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background" />


        <TextView
            android:id="@+id/CartElementName"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="TextView"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/CartElementCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="TextView"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/CartElementName" />


        <TextView
            android:id="@+id/CartElementPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="TextView"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/CartElementImageView"
            app:layout_constraintTop_toBottomOf="@+id/CartElementCompany" />

        <TextView
            android:id="@+id/CartElementColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="TextView"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CartElementPrice" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/CartElementImageView">

        <ImageView
            android:id="@+id/CartElementFavBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/heart5"
            android:layout_marginTop="15dp"
            android:text="" />

        <TextView
            android:id="@+id/ttt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="italic"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/CartElementQunatity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:text="0"
            android:layout_marginTop="16dp"
            android:inputType="numberSigned"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">


            <ImageView
                android:id="@+id/CartElementBtnIncrease"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:rotation="90"
                android:src="@drawable/less"/>


            <ImageView
                android:id="@+id/CartElementBtnDeacrease"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:rotation="270"
                android:src="@drawable/less"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Total"/>


            <TextView
                android:id="@+id/ToalOneItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginLeft="16dp"
                android:text="0"/>

        </LinearLayout>


    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="368dp"
        android:id="@+id/CartElementGif1"
        android:layout_height="80dp"
        android:src="@drawable/nn2"/>

</LinearLayout>
