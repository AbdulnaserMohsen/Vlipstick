<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/l2imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background"

            />

        <TextView
                android:id="@+id/l2name"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
            android:textStyle="italic"
                android:text="TextView" />

            <TextView
                android:id="@+id/l2company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:gravity="center"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name" />


            <TextView
                android:id="@+id/l2price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:gravity="center"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/company" />

            <TextView
                android:id="@+id/l2color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textStyle="italic"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/price" />



    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <ImageView
            android:id="@+id/Fav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/heart5"
            android:text="" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/ProdCart"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/card3"
            android:text="ADD TO CART"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/tryIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Try IT"
            app:layout_constraintTop_toBottomOf="@+id/price" />

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="368dp"
        android:id="@+id/gif1"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/nn1"/>

</LinearLayout>
